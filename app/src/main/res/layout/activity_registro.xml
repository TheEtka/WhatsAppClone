<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".vista.cuenta.RegistroActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Registro"
        android:layout_marginBottom="32dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtNombreRegistro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_txt"
        android:hint="Nombre"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="text"
        android:imeOptions="actionNext"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtCorreoRegistro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_txt"
        android:hint="Correo"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtContraseniaRegistro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/shape_txt"
        android:hint="Contraseña"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textPassword"
        android:imeOptions="actionNext"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtConfContraseniaRegistro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/shape_txt"
        android:hint="Confirmar Contraseña"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:enabled="false"
        android:background="@drawable/selector_btn_entrar"/>

</LinearLayout>